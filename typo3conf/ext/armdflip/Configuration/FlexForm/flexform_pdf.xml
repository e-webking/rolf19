<T3DataStructure>
    <meta>
            <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                        <sheetTitle>PDF Settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.title>
                        <TCEforms>
                                <label>PDF Title</label>
                                <config>
                                    <type>input</type>
                                </config>
                        </TCEforms>
                    </settings.title>
                    <settings.pdf>
                        <TCEforms>
                                <label>PDF file</label>
                                <config>
                                    <type>group</type>
                                    <internal_type>file</internal_type>
                                    <allowed>pdf</allowed>
                                    <uploadfolder>uploads/tx_armdflip</uploadfolder>
                                    <size>1</size>
                                    <maxitems>1</maxitems>
                                    <minitems>0</minitems>
                                </config>
                        </TCEforms>
                    </settings.pdf>
                    <settings.image>
                        <TCEforms>
                                <label>PDF preview image</label>
                                <config>
                                    <type>group</type>
                                    <internal_type>file</internal_type>
                                    <allowed>jpg,png,gif</allowed>
                                    <uploadfolder>uploads/tx_armdflip</uploadfolder>
                                    <size>1</size>
                                    <maxitems>1</maxitems>
                                    <minitems>0</minitems>
                                </config>
                        </TCEforms>
                    </settings.image>
                    <settings.lightbox>
                        <TCEforms>
                                <label>Open in Lightbox</label>
                                <config>
                                    <type>check</type>
                                </config>
                        </TCEforms>
                    </settings.lightbox>
                    <settings.height>
                        <TCEforms>
                                <label>Container Height</label>
                                <config>
                                    <type>input</type>
                                    <default>500</default>
                                </config>
                        </TCEforms>
                    </settings.height>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>