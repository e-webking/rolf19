<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <ROOT type="array">
    <type>array</type>
    <el type="array">
      <field_img type="array">
        <TCEforms type="array">
          <label>Image</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>5000</max_size>
            <uploadfolder>uploads/tx_armtpl</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_img>
      <field_link>
          <TCEforms type="array">
          <label>Image Link</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
            <wizards type="array">
                <link type="array">
                    <type>popup</type>
                    <title>Link</title>
                    <icon>link_popup.gif</icon>
                    <module type="array">
                        <name>wizard_element_browser</name>
                        <urlParameters type="array">
                            <mode>wizard</mode>
                        </urlParameters>
                    </module>
                    <JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
                </link>
            </wizards>
            <softref>typolink</softref>
          </config>
        </TCEforms>
      </field_link>
      <field_align type="array">
        <TCEforms type="array">
          <label>Image alignment</label>
          <config type="array">
            <type>select</type>
            <items type="array">
              <numIndex index="0" type="array">
                <numIndex index="0">Left</numIndex>
                 <numIndex index="1">ce-left</numIndex>
              </numIndex>
              <numIndex index="1" type="array">
                <numIndex index="0">Center</numIndex>
                <numIndex index="1">ce-center</numIndex>
              </numIndex>
              <numIndex index="2" type="array">
                <numIndex index="0">Right</numIndex>
                <numIndex index="1">ce-right</numIndex>
              </numIndex>
            </items>
          </config>
        </TCEforms>
      </field_align>
      <field_imgalt type="array">
        <TCEforms type="array">
          <label>Image alt text</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_imgalt>
      <field_text type="array">
        <TCEforms type="array">
          <label>Text</label>
          <config type="array">
            <type>text</type>
            <rows>3</rows>
            <cols>60</cols>
            <enableRichtext>true</enableRichtext>
            <richtextConfiguration>
                <aConfig>option</aConfig>
            </richtextConfiguration>
          </config>
        </TCEforms>
      </field_text>
      <field_caption type="array">
        <TCEforms type="array">
          <label>Image caption</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_caption>
    </el>
  </ROOT>
</T3DataStructure>