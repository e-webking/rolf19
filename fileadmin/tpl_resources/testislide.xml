<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
  <meta type="array">
    <langDisable>1</langDisable>
  </meta>
  <ROOT type="array">
    <type>array</type>
    <el type="array">
         <field_title type="array">
        <TCEforms type="array">
          <label>Name / Title</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_title>
      <field_img type="array">
        <TCEforms type="array">
          <label>Image</label>
          <config type="array">
            <type>group</type>
            <internal_type>file</internal_type>
            <allowed>gif,png,jpg,jpeg</allowed>
            <max_size>2000</max_size>
            <uploadfolder>uploads/tx_armtpl</uploadfolder>
            <show_thumbs>1</show_thumbs>
            <size>1</size>
            <maxitems>1</maxitems>
            <minitems>0</minitems>
          </config>
        </TCEforms>
      </field_img>
      <field_imgalt type="array">
        <TCEforms type="array">
          <label>Image alt text</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_imgalt>
      <field_text type="array">
        <TCEforms type="array">
          <label>Text</label>
          <config type="array">
            <type>text</type>
            <rows>3</rows>
            <cols>60</cols>
            <enableRichtext>1</enableRichtext>
          </config>
        </TCEforms>
      </field_text>
      <field_caption type="array">
        <TCEforms type="array">
          <label>Image caption</label>
          <config type="array">
            <type>input</type>
            <size>30</size>
            <eval>trim</eval>
          </config>
        </TCEforms>
      </field_caption>
    </el>
  </ROOT>
</T3DataStructure>